{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ post.Picture }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ post.file }}</td>
            </tr>
            <tr>
                <th>Posted_at</th>
                <td>{{ post.PostedAt ? post.PostedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.Likes }}</td>
            </tr>
            <tr>
                <th>Share</th>
                <td>{{ post.Share }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
